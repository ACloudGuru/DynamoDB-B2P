			"ap-south-1": {
				"AMI": "ami-ffbdd790"
			},
			"ap-northeast-1": {
				"AMI": "ami-374db956"
			},
			"ap-northeast-2": {
				"AMI": "ami-2b408b45"
			},
			"ap-southeast-1": {
				"AMI": "ami-a59b49c6"
