{
  "Mappings": {
    "AWSRegionToAMI": {
      "us-east-1"     : { "AMI": "ami-0080e4c5bc078760e" },
      "us-east-2"     : { "AMI": "ami-0cd3dfa4e37921605" },
      "us-west-1"     : { "AMI": "ami-0ec6517f6edbf8044" },
      "us-west-2"     : { "AMI": "ami-01e24be29428c15b2" },
      "eu-central-1"  : { "AMI": "ami-0cfbf4f6db41068ac" },
      "eu-west-1"     : { "AMI": "ami-08935252a36e25f85" },
      "eu-west-2"     : { "AMI": "ami-01419b804382064e4" },
      "eu-west-3"     : { "AMI": "ami-0dd7e7ed60da8fb83" },
      "ap-northeast-1": { "AMI": "ami-00a5245b4816c38e6" },
      "ap-northeast-2": { "AMI": "ami-00dc207f8ba6dc919" },
      "ap-south-1"    : { "AMI": "ami-0ad42f4f66f6c1cc9" },
      "ap-southeast-1": { "AMI": "ami-05b3bcf7f311194b3" },
      "ap-southeast-2": { "AMI": "ami-02fd0b06f06d93dfc" },
      "cn-north-1"    : { "AMI": "ami-8e6aa0e3" },
      "sa-east-1"     : { "AMI": "ami-05145e0b28ad8e0b2" },
      "ca-central-1"  : { "AMI": "ami-07423fb63ea0a0930" }
    }
  },


  "Resources": {
    "Ec2Instance": {
      "Metadata": {
        "AWS::CloudFormation::Init": {
          "config": {
            "sources": {
              "/home/ec2-user/": "https://codeload.github.com/ACloudGuru/DynamoDB-B2P/zip/master"
            },
            "commands": {
              "1-retryjson": {
                "command": "mkdir -p /home/ec2-user/.aws/model && cp /home/ec2-user/DynamoDB-B2P-master/01-configuring-your-aws-account/_retry.json \"$_\""
              },
              "2-permissions": {
                "command": "chown ec2-user:ec2-user /home/ec2-user/* -hR"
              },
              "3-permissionshidden": {
                "command": "chown ec2-user:ec2-user /home/ec2-user/.* -hR"
              },
              "4-permissionsaws": {
                "command": "chown ec2-user:ec2-user /home/ec2-user/.aws/ -R"
              },
              "5-permissionsLabFiles": {
                "command": "chmod 755  /home/ec2-user/DynamoDB-B2P-master -R"
              }
            }
          }
        }
      },
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": {
          "Fn::FindInMap": [
            "AWSRegionToAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "t2.micro",
        "KeyName": "DDBCourse",
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash -xe\n",
                "yum update -y aws-cfn-bootstrap\n",
                "yum install -y gcc\n",
                "pip install boto3\n",
                "pip install Faker\n",
                "pip install tqdm\n",
                "pip install multiprocessing\n",
                "/opt/aws/bin/cfn-init -v ",
                "         --stack ",
                {
                  "Ref": "AWS::StackName"
                },
                "         --resource Ec2Instance ",
                "         --region ",
                {
                  "Ref": "AWS::Region"
                },
                "\n",
                "/opt/aws/bin/cfn-signal -e $? ",
                "         --stack ",
                {
                  "Ref": "AWS::StackName"
                },
                "         --resource Ec2Instance ",
                "         --region ",
                {
                  "Ref": "AWS::Region"
                },
                "\n"
              ]
            ]
          }
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "LOLabMachine"
          }
        ]
      },
      "CreationPolicy": {
        "ResourceSignal": {
          "Timeout": "PT10M"
        }
      }
    }
  },
  "Outputs": {
    "LabmachineIP": {
      "Description": "IP Address of LAB Machine",
      "Value": {
        "Fn::GetAtt": [
          "Ec2Instance",
          "PublicIp"
        ]
      }
    }
  }
}
